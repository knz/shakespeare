parse
include inctest1.cfg
----
role doctor
  spotlight true
  signal cures event at (?P<ts_now>)(?P<event>.*)
  :cure echo cured
end
role empty
end
cast
  bob plays doctor
  # bob plays from working directory bob
  alice plays empty
  # alice plays from working directory alice
end
script
  tempo 2m3s
  # no storyline defined, play will terminate immediately
end
# no audience defined

