role doctor is
  signal cures event at (?P<ts_now>)(?P<event>.*)
  :cure echo cured
end
cast
  alice plays doctor
  # alice plays from working directory alice
  bob plays doctor(with_a_hat)
  # bob plays from working directory bob
end
